{
  "version": 2,
  "builds": [
    {
      "src": "client/dist/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/portfolio",
      "dest": "/api/portfolio.js"
    },
    {
      "src": "/api/pnl",
      "dest": "/api/pnl.js"
    },
    {
      "src": "/api/swaps",
      "dest": "/api/swaps.js"
    },
    {
      "src": "/api/alerts",
      "dest": "/api/alerts.js"
    },
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/telegram",
      "dest": "/api/telegram.js"
    },
    {
      "src": "/(wallets/.*)",
      "dest": "/client/dist/index.html"  
    },
    {
      "src": "/(wallets)",
      "dest": "/client/dist/index.html"  
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"  
    }
  ]
}
