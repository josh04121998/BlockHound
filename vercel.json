{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      },
      {
        "src": "api/portfolio.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/portfolio",
        "dest": "/api/portfolio.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/dist/index.html"
      }
    ]
  }
  